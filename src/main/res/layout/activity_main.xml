<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/radial_background"
    android:id="@+id/relLayMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:fitsSystemWindows="true"
        android:src="@drawable/karate_chop"
        android:scaleType="fitXY"/>
    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        app:backgroundColor="@color/colorAccent"
        app:iconSize="24dp"
        app:iconTint="@color/iconTint"
        app:iconTintActive="@color/iconTint"
        app:indicatorColor="@color/indicatorColor"
        app:indicatorRadius="10dp"
        app:menu="@menu/bottom_menu"
        app:sideMargins="10dp"
        app:textColor="@color/colorTextPrimary"
        app:textSize="14sp" />
</RelativeLayout>